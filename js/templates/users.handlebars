<div class="page-header">
  <h1>Users</h1>
</div>
<p class="lead">Manage your users!</p>

<ul class="list-unstyled">
	{{#each itemController="user"}}
		<li>
			<span 
				{{bind-attr class=":glyphicon :glyphicon-user isAwesome"}} 
				{{action "toggleAwesomeness" on="click"}}>
			</span>
      {{fullName}}
      <a href="#"><span class="badge">{{numTodos}}</span></a>
    </li>
	{{/each}}
</ul>